<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_foreground_activated">

    <TextView
        android:id="@+id/greeting_card_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        style="@style/material_greeting_card_content_name"/>

    <TextView
        android:id="@+id/greeting_card_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|top"
        android:textSize="16sp"
        style="@style/material_greeting_card_content_time"/>

    <TextView
        android:id="@+id/greeting_card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/greeting_card_name"
        android:textSize="15sp"
        style="@style/material_greeting_card_content_words"/>

</RelativeLayout>
